<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:layout_margin="45dp"
    android:id="@+id/zoom">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close_white_24dp"
        android:layout_gravity="right"
        android:background="#ff0000"
        android:id="@+id/btn_zoom"
        android:onClick="fecharZoom"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-40dp"
        android:id="@+id/img_zoom"/>
    <ViewSwitcher
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:id="@+id/switch_botao">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_add_circle_outline_white_24dp"
            android:onClick="addCarta"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_delete_white_24dp"
            android:onClick="excluirCarta"/>
    </ViewSwitcher>
</LinearLayout>
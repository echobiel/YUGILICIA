<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_inventario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.gamesseller.yugiooh.InventarioActivity"
    tools:showIn="@layout/activity_inventario"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Seu Deck atual"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_marginBottom="5dp"/>

    <org.askerov.dynamicgrid.DynamicGridView
        android:layout_width="match_parent"
        android:id="@+id/grid_view_cartasUser"
        android:numColumns="4"
        android:layout_weight="1.3"
        android:layout_height="match_parent"></org.askerov.dynamicgrid.DynamicGridView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Todas as cartas"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_marginBottom="5dp"/>
    <org.askerov.dynamicgrid.DynamicGridView
        android:layout_width="match_parent"
        android:id="@+id/grid_view_cartas"
        android:numColumns="4"
        android:layout_weight="1"
        android:layout_height="match_parent"></org.askerov.dynamicgrid.DynamicGridView>

</LinearLayout>
